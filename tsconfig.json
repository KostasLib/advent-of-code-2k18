{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": false,
    "target": "es6",
    "watch": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "plugins": [{ "name": "typescript-tslint-plugin", "configFile": "./tslint.json" }],
    "paths": {
      "*": ["node_modules/", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
